@model KnifeApp.Models.KnifeTypeViewModel

@{
    ViewData["Title"] = " Knife";
}

<h1>Knife Collection</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Knives" asp-action="Index" method="get">
    <p>
        <select asp-for="KnifeTypeSize" asp-items="Model.Types">
            <option value="">All</option>
        </select>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Knives[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Knives[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Knives[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Knives[0].Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Knives[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Knives[0].Image)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Knives[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Knives)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
